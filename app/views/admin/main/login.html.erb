<div class="row-fluid">

  <div class="row-fluid">
    <div class="span12 center login-header">
      <h2>后台管理系统</h2>
    </div><!--/span-->
  </div><!--/row-->

  <div class="row-fluid">
    <div class="well span5 center login-box">

      <% if flash[:notice]%>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= flash[:notice] %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert">×</button>
          请在下方输入用户名和密码
        </div>
      <%end%>



      <%= form_tag  check_login_admin_main_index_path, :class => "form-horizontal" do %>
        <fieldset>
          <div class="input-prepend" title="Username" data-rel="tooltip">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= text_field_tag "login_name", nil, :class => "input-large span10", :autofocus => true %>
          </div>
          <div class="clearfix"></div>

          <div class="input-prepend" title="Password" data-rel="tooltip">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= password_field_tag "password", nil, :class =>  "input-large span10" %>
          </div>
          <div class="clearfix"></div>
          <div class="clearfix"></div>

          <p class="center span5">
            <%=submit_tag "登 录", :class => "btn btn-primary"%>
          </p>
        </fieldset>
      <% end %>
    </div><!--/span-->
  </div><!--/row-->
</div><!--/fluid-row-->